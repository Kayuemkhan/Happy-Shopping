        <activity android:name="code.fortomorrow.happyshopping.CartActivity" />
        <activity android:name="code.fortomorrow.happyshopping.HomeActivity" />
        <activity android:name="code.fortomorrow.happyshopping.RegisterActivity" />
        <activity android:name="code.fortomorrow.happyshopping.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="code.fortomorrow.happyshopping.MainActivity" />
    </application>

</manifest>