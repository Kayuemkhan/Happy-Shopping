<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="code.fortomorrow.happyshopping">

    <application
        android:allowBackup="true"
        android:icon="@drawable/shop_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shop_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name="code.fortomorrow.happyshopping.MyOrdersActivity"></activity>
        <activity android:name="code.fortomorrow.happyshopping.Aboutpage" />
        <activity android:name="code.fortomorrow.happyshopping.CategoryItemActivity" />
